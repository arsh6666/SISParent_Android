<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_smoke"
    android:orientation="vertical">

    <include layout="@layout/custom_title_toolbar"
        android:id="@+id/customToolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/forgot_lock" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Change Password?"
            android:textColor="@color/textColorPrimary"
            android:textSize="22sp"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:text="Reset code sent on your register email ID"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            android:visibility="gone" />


        <EditText
            android:textCursorDrawable="@null"
            android:id="@+id/et_OldPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/grey_border_white_background"
            android:hint="Type current password"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/textColorSecondary"
            android:textSize="16sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/et_NewPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/grey_border_white_background"
            android:hint="Type new password"
            android:textCursorDrawable="@null"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/textColorSecondary"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_ConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/grey_border_white_background"
            android:hint="Type confirm password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/textColorSecondary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_ChangePassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/green_background_button"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp">


        </Button>

    </LinearLayout>

</LinearLayout>
</layout>
