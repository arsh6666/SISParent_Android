<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/custom_title_toolbar"
        android:id="@+id/customToolbar"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGuardianList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customToolbar"
        android:layout_above="@+id/btn_AddGuardian"
        android:background="@color/color_white_smoke" />

    <Button
        android:id="@+id/btn_AddGuardian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gredient_button"
        android:text="Add Guardian"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />
</RelativeLayout>
</layout>